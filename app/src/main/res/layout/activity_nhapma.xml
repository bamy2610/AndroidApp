<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".NhapmaActivity">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="80dp"
        android:layout_marginRight="10dp"
        android:fontFamily="tahoma"
        android:text="Nhập Mã Xác Thực"
        android:textColor="#0f8912"
        android:textSize="41dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#0f8912"
        android:backgroundTintMode="add" />

    <EditText
        android:id="@+id/editTextTextPersonName2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/pading_1"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:fontFamily="tahoma"
        android:drawableLeft="@drawable/ic_action_maxacthuc"
        android:text="Mã Xác Thực"
        android:textColor="#0f8912"
        android:textSize="21dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/buttom_1"
        android:gravity="center"
        android:text="Xác Thực"
        android:textSize="21dp"
        android:fontFamily="tahoma"
        android:textColor="#ffff" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:fontFamily="tahoma"
        android:text="Gửi lại mã xác thực ? "
        android:textColor="#FF5722"
        android:textSize="16dp" />

</LinearLayout>