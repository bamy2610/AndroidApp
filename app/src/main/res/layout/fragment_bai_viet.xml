<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#090"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.dichvu.SlideshowFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/view2"
                android:layout_width="385dp"
                android:layout_height="131dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="#0c0" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="90dp"
                android:layout_marginRight="60dp"
                android:gravity="right"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/create"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="1dp"
                    android:text="Đăng Nhập /"
                    android:textSize="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="tahoma"
                    android:text="Đăng Ký"
                    android:textSize="16dp" />
            </LinearLayout>

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="232dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="50dp" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="230dp"
                android:layout_marginTop="25dp"
                android:text="Ngôn ngữ :" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="155dp"
                android:layout_height="128dp"

                android:layout_marginTop="10dp"
                android:src="@drawable/backgr" />

        </FrameLayout>

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="131dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/banner" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="2274dp">

            <View
                android:id="@+id/view6"
                android:layout_width="wrap_content"
                android:layout_height="2039dp"
                android:background="#fff" />

            <View
                android:id="@+id/view4"
                android:layout_width="wrap_content"
                android:layout_height="544dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#f0f8ff" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="141dp"
                android:layout_height="wrap_content"
                android:text="Bài Viết"
                android:textAlignment="center"
                android:textColor="#009900"
                android:textSize="30dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:backgroundTint="#0f8912"
                android:backgroundTintMode="add" />

            <TextView
                android:layout_width="197dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="70dp"
                android:text="Không có nội dung"
                android:textAlignment="center"
                android:textColor="#009900"
                android:textSize="21dp" />

            <Button
                android:id="@+id/button5"
                android:layout_width="117dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="120dp"
                android:background="#090"
                android:text="Hiển Thị Thêm"
                android:textColor="#fff" />


        </FrameLayout>


    </LinearLayout>


</ScrollView>