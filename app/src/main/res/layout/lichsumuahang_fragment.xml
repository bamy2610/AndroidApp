<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#090"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.dichvu.SlideshowFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/view2"
                android:layout_width="385dp"
                android:layout_height="131dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="#0c0" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="90dp"
                android:layout_marginRight="60dp"
                android:gravity="right"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/create"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="1dp"
                    android:text="Đăng Nhập /"
                    android:textSize="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="tahoma"
                    android:text="Đăng Ký"
                    android:textSize="16dp" />
            </LinearLayout>

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="232dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="50dp" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="230dp"
                android:layout_marginTop="25dp"
                android:text="Ngôn ngữ :" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="155dp"
                android:layout_height="128dp"

                android:layout_marginTop="10dp"
                android:src="@drawable/backgr" />

        </FrameLayout>

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="131dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/banner" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="670dp">

            <View
                android:id="@+id/view6"
                android:layout_width="wrap_content"
                android:layout_height="600dp"
                android:background="#fff" />


            <View
                android:id="@+id/view4"
                android:layout_width="wrap_content"
                android:layout_height="600dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#f0f8ff" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="385dp"
                android:layout_height="wrap_content"
                android:text="Lịch sử mua hàng"
                android:textAlignment="center"
                android:textColor="#009900"
                android:textSize="30dp" />



            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:backgroundTint="#0f8912"
                android:backgroundTintMode="add" />

            <Spinner
                android:id="@+id/spinner2"
                android:layout_width="220dp"
                android:layout_height="50dp"
                android:background="@drawable/style_spiner"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="60dp"
                />

            <SearchView
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="118dp"
                android:background="@drawable/pading_1" />

            <Button
                android:layout_width="124dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="270dp"
                android:layout_marginTop="120dp"
                android:background="#090"
                android:text="Tìm kiếm"
                android:textColor="#fff" />

            <View
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_marginTop="180dp"
                android:background="#fff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="220dp"
                android:text="SHOP SƯU TẦM"
                android:textAlignment="center"
                android:textColor="#009900"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="300dp"
                android:layout_marginTop="220dp"
                android:text="Hoàn thành"
                android:textAlignment="center"
                android:textColor="#009900"
                android:textSize="15dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="19dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="250dp"
                android:layout_marginRight="10dp"
                android:backgroundTint="#0f8912"
                android:backgroundTintMode="add" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="270dp"
                android:text="Tranh Phong Cảnh Siêu Đẹp"
                android:textAlignment="center"
                android:textColor="#009900"
                android:textSize="15dp" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="187dp"
                android:layout_height="100dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="300dp"
                android:src="@drawable/canh_vat3" />
            <TextView
                android:layout_width="107dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="270dp"
                android:layout_marginTop="320dp"
                android:text="100.000 vnd"
                android:textAlignment="center"
                android:textColor="#009900"
                android:textSize="15dp" />
            <TextView
                android:layout_width="107dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="270dp"
                android:layout_marginTop="350dp"
                android:text="Số lượng: 1"
                android:textAlignment="center"
                android:textColor="#009900"
                android:textSize="15dp" />



            <EditText
                android:layout_width="match_parent"
                android:layout_height="19dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="420dp"
                android:layout_marginRight="10dp"
                android:backgroundTint="#0f8912"
                android:backgroundTintMode="add" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="440dp"
                android:text="1 sản phẩm"
                android:textAlignment="center"
                android:textColor="#009900"
                android:textSize="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="220dp"
                android:layout_marginTop="440dp"
                android:text="Thành tiền: 100.000vnđ"
                android:textAlignment="center"
                android:textColor="#009900"
                android:textSize="15dp" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="19dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="460dp"
                android:layout_marginRight="10dp"
                android:backgroundTint="#0f8912"
                android:backgroundTintMode="add" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="480dp"
                android:text="Đã giao hàng/Chưa đối soát"
                android:textAlignment="center"
                android:textColor="#009900"
                android:textSize="15dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="19dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="500dp"
                android:layout_marginRight="10dp"
                android:backgroundTint="#0f8912"
                android:backgroundTintMode="add" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="530dp"
                android:hint="Không nhận được đánh giá"
                android:textAlignment="center"
                android:textColor="#009900"
                android:textSize="20dp" />

            <Button
                android:layout_width="124dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="270dp"
                android:layout_marginTop="520dp"
                android:background="#090"
                android:text="Mua lại"
                android:textColor="#fff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="620dp"
                android:text="© Phát triển bới Khiết Long"
                android:textColor="#fff"
                android:textSize="21dp" />


        </FrameLayout>


    </LinearLayout>




</ScrollView>