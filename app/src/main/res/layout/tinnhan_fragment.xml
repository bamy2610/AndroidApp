<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#090"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.dichvu.SlideshowFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/view2"
                android:layout_width="385dp"
                android:layout_height="131dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="#0c0" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="90dp"
                android:layout_marginRight="60dp"
                android:gravity="right"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/create"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="1dp"
                    android:text="Đăng Nhập /"
                    android:textSize="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="tahoma"
                    android:text="Đăng Ký"
                    android:textSize="16dp" />
            </LinearLayout>

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="232dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="50dp" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="230dp"
                android:layout_marginTop="25dp"
                android:text="Ngôn ngữ :" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="155dp"
                android:layout_height="128dp"

                android:layout_marginTop="10dp"
                android:src="@drawable/backgr" />

        </FrameLayout>

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="131dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/banner" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="378dp">

            <View
                android:id="@+id/view6"
                android:layout_width="wrap_content"
                android:layout_height="322dp"
                android:background="#fff" />

            <View
                android:id="@+id/view4"
                android:layout_width="wrap_content"
                android:layout_height="319dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#f0f8ff" />



            <TextView
                android:id="@+id/textView16"
                android:layout_width="141dp"
                android:layout_height="wrap_content"
                android:text="Tin Nhắn"
                android:textAlignment="center"
                android:textColor="#009900"
                android:textSize="30dp" />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:backgroundTint="#0f8912"
                android:backgroundTintMode="add" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="54dp"
                android:layout_marginTop="70dp"
                android:background="#fff" />

            <TextView
                android:layout_width="89dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="80dp"
                android:text="Lê Bá Mỹ"
                android:textAlignment="center"
                android:textColor="#009900"
                android:textSize="20dp" />

            <Button
                android:id="@+id/button3"
                android:layout_width="265dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="72dp"
                android:background="#090"
                android:text="alo, tối đi chơi không"
                android:textSize="15dp"
                android:textColor="#fff" />

            <EditText
                android:id="@+id/editTextTextPersonName3"
                android:layout_width="269dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="130dp"
                android:ems="10"
                android:hint="Nhập Tin Nhắn"
                android:inputType="textPersonName" />

            <Button

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="300dp"
                android:layout_marginTop="130dp"
                android:background="#090"
                android:text="Trả Lời"
                android:textColor="#fff" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="54dp"
                android:layout_marginTop="200dp"
                android:background="#fff" />

            <TextView
                android:layout_width="108dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="200dp"
                android:text="Nguyễn Cao Cường"
                android:textAlignment="center"
                android:textColor="#009900"
                android:textSize="20dp" />

            <Button

                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="202dp"
                android:background="#090"
                android:text="Nhắn Tin"
                android:textColor="#fff" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="330dp"
                android:text="© Phát triển bới Khiết Long"
                android:textColor="#fff"
                android:textSize="21dp" />

        </FrameLayout>


    </LinearLayout>




</ScrollView>