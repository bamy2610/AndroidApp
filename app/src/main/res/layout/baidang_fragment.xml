<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#090"
    tools:context=".ui.baidang.baidangFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/view2"
            android:layout_width="385dp"
            android:layout_height="131dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="#0c0" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="90dp"
            android:layout_marginRight="60dp"
            android:gravity="right"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/create"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="1dp"
                android:text="Đăng Nhập /"
                android:textSize="16dp" />
            <TextView
                android:id="@+id/quenmatkhau"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:fontFamily="tahoma"
                android:text="Đăng Ký"
                android:textSize="16dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="230dp"
            android:layout_marginTop="25dp"
            android:text="Ngôn ngữ :" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="155dp"
            android:layout_height="128dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/backgr" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="200dp"
            android:background="@drawable/style_spiner"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="50dp" />

    </FrameLayout>

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="385dp"
        android:layout_height="131dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/qc" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="850dp">

        <View
            android:id="@+id/view4"
            android:layout_width="wrap_content"
            android:layout_height="800dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#fff" />
            <SearchView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/pading_1" />
            <Spinner
                android:id="@+id/spinner2"
                android:layout_width="170dp"
                android:layout_height="50dp"
                android:background="@drawable/style_spiner"
                android:layout_marginLeft="210dp"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="60dp"
                android:fontFamily="arial"
                android:text="Danh sách bài viết của bạn bè"
                android:textColor="#090"
                android:padding="5dp"
                android:textSize="21dp"
                android:textStyle="bold" />
            <EditText
                android:layout_width="375dp"
                android:layout_height="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="85dp"
                android:backgroundTint="#0f8912"
                android:backgroundTintMode="add" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="110dp"
                android:fontFamily="arial"
                android:text="Từ Ngày :"
                android:textColor="#090"
                android:padding="5dp"
                android:textSize="18dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editTextTextPersonName3"
                android:layout_width="wrap_content"
                android:layout_height="41dp"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="110dp"
                android:background="@drawable/pading_1"
                android:ems="10"
                android:padding="5dp"
                android:inputType="textPersonName"
                android:text="dd/mm/YYYY"
                android:drawableEnd="@drawable/ic_baseline_calendar_today_24"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="160dp"
                android:fontFamily="arial"
                android:text="Đến ngày :"
                android:textColor="#090"
                android:padding="5dp"
                android:textSize="18dp"
                android:textStyle="bold" />

            <EditText

                android:layout_width="wrap_content"
                android:layout_height="41dp"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="160dp"
                android:background="@drawable/pading_1"
                android:ems="10"
                android:padding="5dp"
                android:inputType="textPersonName"
                android:text="dd/mm/YYYY"
                android:drawableEnd="@drawable/ic_baseline_calendar_today_24"/>

            <View
                android:id="@+id/view3"
                android:layout_width="352dp"
                android:layout_height="300dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="220dp"
                android:background="#F5F0F0"
                android:outlineAmbientShadowColor="@color/cardview_dark_background" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="230dp"
                android:fontFamily="arial"
                android:text="Lê Bá Mỹ"
                android:textColor="#090"
                android:padding="5dp"
                android:textSize="18dp"
                android:textStyle="bold" />
            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="230dp"
                android:layout_marginLeft="40dp"
                android:src="@drawable/avatar_facebook_mac_dinh_nen_thay_doi_lv_75d1222b7" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="250dp"
                android:fontFamily="arial"
                android:text="14 phút"
                android:padding="5dp"
                android:textSize="18dp"
                 />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="290dp"
                android:fontFamily="arial"
                android:text="Điều hòa Panasonic"
                android:padding="5dp"
                android:textSize="18dp"
                />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="299dp"
                android:layout_height="155dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="320dp"
                app:srcCompat="@drawable/panasonic" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="480dp"
                android:fontFamily="arial"
                android:drawableStart="@drawable/ic_baseline_favorite_border_24"
                android:text="Thích"
                android:textColor="#090"
                android:padding="5dp"
                android:textSize="18dp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="480dp"
                android:fontFamily="arial"
                android:drawableStart="@drawable/ic_baseline_comment_24"
                android:text="Bình Luận"
                android:textColor="#090"
                android:padding="5dp"
                android:textSize="18dp"
                android:textStyle="bold" />
            <EditText
                android:layout_width="375dp"
                android:layout_height="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="650dp"
                android:backgroundTint="#0f8912"
                android:backgroundTintMode="add" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="700dp"
                android:drawableStart="@drawable/ic_baseline_copyright_24"
                android:text=" Phát Triển Bởi Khiết Long"
                android:padding="5dp"
                android:textColor="#808080"
                android:textStyle="bold" />

        </FrameLayout>

    </LinearLayout>

</ScrollView>