<?xml version="1.0" encoding="utf-8"?>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:background="#090"
        android:layout_height="match_parent"
        tools:context=".ui.gallery.GalleryFragment">

<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="vertical">


<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/view2"
        android:layout_width="385dp"
        android:layout_height="131dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="#0c0" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="90dp"
        android:layout_marginRight="60dp"
        android:gravity="right"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="1dp"
            android:text="Đăng Nhập /"
            android:textSize="16dp" />
        <TextView
            android:id="@+id/quenmatkhau"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:fontFamily="tahoma"
            android:text="Đăng Ký"
            android:textSize="16dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="25dp"
        android:text="Ngôn ngữ :" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="155dp"
        android:layout_height="128dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/backgr" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="200dp"
        android:background="@drawable/style_spiner"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="50dp" />

</FrameLayout>

<ImageView
    android:id="@+id/imageView5"
    android:layout_width="385dp"
    android:layout_height="131dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:src="@drawable/qc" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="550dp">

    <View
        android:id="@+id/view4"
        android:layout_width="wrap_content"
        android:layout_height="500dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#fff" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="arial"
            android:text="Mua Sắm"
            android:textColor="#090"
            android:padding="5dp"
            android:textSize="21dp"
            android:textStyle="bold" />
        <EditText
            android:layout_width="375dp"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="#0f8912"
            android:backgroundTintMode="add" />
        <SearchView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/pading_1" />
        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:background="@drawable/style_spiner"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="50dp"
            />
        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="120dp"
            android:text="Không có nội dung"
            android:textColor="#090"
            android:textStyle="bold" />

        <EditText
            android:layout_width="375dp"
            android:layout_height="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="400dp"
            android:backgroundTint="#0f8912"
            android:backgroundTintMode="add" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="450dp"
            android:drawableStart="@drawable/ic_baseline_copyright_24"
            android:text=" Phát Triển Bởi Khiết Long"
            android:padding="5dp"
            android:textColor="#808080"
            android:textStyle="bold" />


    </FrameLayout>
</LinearLayout>
    </ScrollView>


